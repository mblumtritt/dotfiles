# disable globbing
alias rake='noglob rake'
alias fc='noglob fc'
alias find='noglob find'
alias ftp='noglob ftp'
alias history='noglob history'
alias locate='noglob locate'
alias rsync='noglob rsync'
alias sftp='noglob sftp'
alias git='noglob git'

alias ll='ls -al'
alias ll='ls -Al'
alias lm='ls -al |more'
alias lr='ls -lR'
alias du='du -kh'
alias path='echo -e ${PATH//:/\\n}'
alias ...='cd ..'
alias src='source'
alias ae='e ~/.aliases'
alias ar='source ~/.aliases'
alias reload!='. ~/.zshrc'
alias d='dirs -v'

alias fucking='sudo'
alias please='sudo'

alias g='git'
alias e='$EDITOR'
alias o='open'

alias rk='rake'
alias be='noglob bundle exec'
alias ber='noglob bundle exec rake'
alias bert='noglob bundle exec rake -T'

alias brewup='brew update; brew upgrade --all; brew cleanup'

alias ip='dig +short myip.opendns.com @resolver1.opendns.com'
alias localip='ipconfig getifaddr en0'

alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"
alias afk='/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend'
alias qlf='qlmanage -p "$@" >& /dev/null'
alias cpv='rsync -poghb --backup-dir=/tmp/rsync -e /dev/null --progress --'
alias todo='e ~/todo.md'
alias sensors='san run sensor/ip sensor/usb sensor/airport sensor/volumes'
alias eyes='san run logger && san run notify'

[[ -f ~/.aliases.local ]] && source ~/.aliases.local
