# disable globbing
alias rake='noglob rake'
alias fc='noglob fc'
alias find='noglob find'
alias ftp='noglob ftp'
alias history='noglob history'
alias locate='noglob locate'
alias rsync='noglob rsync'
alias sftp='noglob sftp'
alias git='noglob git'

alias ll='ls -al'
alias ll='ls -Al'
alias lm='ls -al |more'
alias lr='ls -lR'
alias du='du -kh'
alias path='echo -e ${PATH//:/\\n}'
alias ...='cd ..'
alias ae='e ~/.aliases'
alias ar='source ~/.aliases'
alias reload!='. ~/.zshrc'

alias fucking='sudo'
alias please='sudo'

alias g='git'
alias e='$EDITOR'
alias o='open'

alias rk='rake'
alias be='noglob bundle exec'
alias ber='be rake'
alias bert='ber -T'
alias berta='bert -A'
alias rcop='rubocop -D -E -S'
alias rmq='rabbitmqadmin'
alias todo='e ~/todo.md'
