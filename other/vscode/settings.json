{
  "[ruby]": {
    "editor.defaultFormatter": "ruby-syntax-tree.vscode-syntax-tree",
    "editor.useTabStops": false
  },

  "code-runner.clearPreviousOutput": true,
  "code-runner.enableAppInsights": false,
  "code-runner.ignoreSelection": true,
  "code-runner.runInTerminal": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.showRunCommandInEditorContextMenu": false,
  "code-runner.showStopIconInEditorTitleMenu": false,
  "diffEditor.codeLens": true,
  "diffEditor.diffAlgorithm": "advanced",
  "editor.autoClosingDelete": "always",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorWidth": 4,
  "editor.cursorBlinking": "solid",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.find.autoFindInSelection": "multiline",
  "editor.fontFamily": "Monaspace Neon Lite",
  "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss07', 'ss09'",
  "editor.fontSize": 13,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": "active",
  "editor.inlayHints.fontSize": 13,
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.links": false,
  "editor.peekWidgetDefaultFocus": "editor",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.rulers": [80],
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "eslint.useESLintClass": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "markdown"
  ],
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "Gemfile": "ruby",
    "Rakefile": "ruby"
  },
  "files.eol": "\n",
  "files.hotExit": "off",
  "files.trimTrailingWhitespace": true,
  "javascript.suggest.completeFunctionCalls": true,
  "markdown.preview.fontSize": 13,
  "prettier.jsxSingleQuote": true,
  "prettier.resolveGlobalModules": true,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.useEditorConfig": false,
  "security.workspace.trust.banner": "always",
  "security.workspace.trust.enabled": false,
  "shell-syntax.defaultShell": "zsh",
  "shellcheck.customArgs": ["-x"],
  "spellright.configurationScope": "user",
  "spellright.documentTypes": ["markdown", "latex", "text"],
  "spellright.language": ["en"],
  "syntaxTree.singleQuotes": true,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "telemetry.telemetryLevel": "off",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.fontFamily": "RobotoMono Nerd Font",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "update.showReleaseNotes": false,
  "vscode-run-rspec-file.custom-command": "bundle exec rspec --order defined --format d --fail-fast --color",
  "workbench.iconTheme": "vs-minimal",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "testing.showAllMessages": true,
  "git.allowForcePush": true,
  "git.openRepositoryInParentFolders": "never",
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "terminal.integrated.enableImages": true,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.fontSize": 13,
  "extensions.autoCheckUpdates": false,
  "code-runner.showRunIconInEditorTitleMenu": false,
  "diffEditor.ignoreTrimWhitespace": false,

  "workbench.cloudChanges.autoResume": "off",
  "workbench.cloudChanges.continueOn": "off",
  "workbench.commandPalette.experimental.enableNaturalLanguageSearch": false,
  "workbench.enableExperiments": false,
  "workbench.list.smoothScrolling": true,
  "workbench.welcomePage.walkthroughs.openOnInstall": false,
  "workbench.tips.enabled": false,
  "workbench.editor.highlightModifiedTabs": true,
  "window.autoDetectHighContrast": false,
  "window.titleBarStyle": "native",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.initialHint": false,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "window.restoreWindows": "none",
  "window.openFilesInNewWindow": "default",
  "workbench.activityBar.location": "hidden",
  "editor.accessibilitySupport": "off",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.formatting": "clangFormat",
  "C_Cpp.clang_format_fallbackStyle": "Microsoft",
  "C_Cpp.default.compileCommands": [""],
  "C_Cpp.doxygen.generateOnType": false,
  "cmake.configureOnOpen": false,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.showOptionsMovedNotification": false,
  "vscode-run-rspec-file.integration": "other",
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.fontWeightBold": "bold",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "workbench.panel.showLabels": false,
  "markdown.updateLinksOnFileMove.enabled": "prompt",
  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "completion": false,
    "codeLens": true,
    "definition": true,
    "workspaceSymbol": true,
    "signatureHelp": true,
    "typeHierarchy": true
  },
  "rubyLsp.formatter": "syntax_tree",
  "chat.commandCenter.enabled": false,
  "tinymist.formatterMode": "typstyle",
  "[typst]": {
    "editor.defaultFormatter": "myriad-dreamin.tinymist"
  },
  "window.customTitleBarVisibility": "never",
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "MikeLight",
  "markdown.validate.unusedLinkDefinitions.enabled": "warning",
  "cSpell.language": "en,de",
  "cSpell.enabledFileTypes": {
    "markdown": true
  }
}
