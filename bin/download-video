#! /bin/sh

set -e
readonly TDIR="$HOME/Downloads"

if [ "$1" = '--help' ]; then echo "Usage: ${0##*/} URL

Download a video or video playlist from given URL to '$TDIR'.
"
elif [ $# = 0 ]; then
	echo "${0##*/}: URL missing" >&2
	exit 1
else
  yt-dlp \
    --concurrent-fragments 8 \
    --geo-bypass \
    --output "$TDIR/%(title)s.%(ext)s" \
    "$@"
fi
