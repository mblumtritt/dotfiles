#! /bin/sh

set -e
readonly TDIR="$HOME/Downloads"

[ "$1" = '--help' ] && echo "Usage: ${0##*/} URL

Download a video or video playlist from given URL to '$TDIR'." && exit

[ $# = 0 ] && (>&2 echo "${0##*/}: URL missing") && exit 1

mkdir -p "$TDIR"
cd "$TDIR"
yt-dlp \
    --concurrent-fragments 8 \
    --geo-bypass \
    "$@"
