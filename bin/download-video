#! /bin/sh

set -e
readonly TDIR="$HOME/Downloads"

if [ "$1" = '--help' ]; then echo "Usage: ${0##*/} URL

Download a video or video playlist from given URL to '$TDIR'.
"
  exit 0
elif [ $# = 0 ]; then
	(>&2 echo "${0##*/}: URL missing")
	exit 1
else
  # --format mp4
  youtube-dl --external-downloader=aria2c --ignore-errors --geo-bypass --output "$TDIR/%(title)s - %(id)s.%(ext)s" "$@"
fi
