#! /bin/sh
USAGE="Usage: ${0##*/} DIR

Remove all links from DIR."

set -e
case "$1" in
('') echo "${0##*/}: DIR name missing" >&2 && exit 1 ;;
(-h|--help) echo "$USAGE" ;;
(*)
  [ -d "$1" ] || echo "${0##*/}: invalid directory name - '$1'" >&2 && exit 1
  for file in "$1"/*
  do [ -L "$file" ] && rm "$file"
  done
;;
esac
