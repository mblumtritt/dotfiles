#! /bin/sh

set -e

[ "$1" = '--help' ] && echo "Usage: ${0##*/} URL

Display WHOIS rrecord about given URL or domain." && exit

[ $# = 0 ] && (>&2 echo "${0##*/}: URL missing") && exit 1

domain=$(echo "$1" | awk -F/ '{print $3}') # get domain from URL
[ -z "$domain" ] && domain=$1
echo "whois record for $domain:"
/usr/bin/whois -h whois.internic.net "$domain" | sed '/NOTICE:/q'
