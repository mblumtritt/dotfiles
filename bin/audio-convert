#! /bin/sh

set -e

if [ "$1" = '--help' ]; then echo "Usage: ${0##*/} FILE

Converts given audio FILE(.mp3) to ringtome (FILE.m4r).
"
elif [ $# = 0 ]; then
	(>&2 echo "${0##*/}: FILE missing")
	exit 1
else
	for file in "$@"
	do
    file="${file%.*}"
		afconvert "$file.mp3" "$file.m4r" -f m4af
	done
fi
