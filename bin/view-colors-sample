#! /bin/bash

case "$1" in
(-h|--help) echo "Usage: ${0##*/}

View colors." ;;
('')
	set -e
	CLEAR=$(tput op)
	COLS=$(tput cols)
	for i in {0..255} ; do
		printf "$(tput setaf "$i" ; tput setab "$i") %03d $CLEAR" "$i"
		{ test "$(((i + 1) % (COLS / 5)))" -eq '0' || test "$i" -eq '255'; } && echo
	done
;;
(*) echo "${0##*/}: invalid argument - $1" >&2 ; exit 1 ;;
esac
