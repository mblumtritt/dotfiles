#!/usr/bin/env ruby --disable-all
# frozen_string_literal: true

trap(2) { exit(138) }

WIDTH = [ENV['WIDTH'].to_i, 10].max
HEIGHT = [ENV['HEIGHT'].to_i, 6].max

def weighted(**definitions)
  sum = 0
  elements = definitions.keys
  weights = definitions.values.map! { sum += it }
  Enumerator.new do |y|
    while true
      rnd = rand(sum) + 1
      y << elements[weights.bsearch_index { rnd <= it }].sample
    end
  end
end

obj =
  weighted(
    %w[ðŸŒ¿] => 100,
    %w[ðŸŒ± ðŸ€] => 10,
    %w[ðŸŒ¼ ðŸŒ» ðŸŒ¸ ðŸŒº] => 9,
    %w[ðŸ¦‡ ðŸ ðŸ¦‹ ðŸ› ðŸŒ ðŸž ðŸœ ðŸ¦Ÿ ðŸ¦— ðŸ ðŸ€ ðŸ¦” ðŸ„ ðŸ¶ ðŸ± ðŸ­ ðŸ¹ ðŸ° ðŸ¦Š ðŸ¼ ðŸ¨ ðŸ¯ ðŸ¦ ðŸ• ðŸ© ðŸˆ ðŸ¦¨] => 8,
    %w[ðŸ¦‰ ðŸ… ðŸ† ðŸ¦ ðŸ¦§ ðŸ¦Œ ðŸ• ðŸ¦ ðŸ¦¡ ðŸ¦¥ ðŸ¿ï¸ ðŸ¥ ðŸª¿ ðŸ¦† ðŸ¦‰ ðŸ¦¬ ðŸƒ ðŸ‚ ðŸ„ ðŸ« ðŸ– ðŸ¦Œ] => 1
  )
puts(Array.new(HEIGHT) { obj.take(WIDTH).join })
