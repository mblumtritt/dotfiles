#!/usr/bin/env ruby --disable-all
# frozen_string_literal: true

trap(2) { exit(138) }

WIDTH = [ENV['WIDTH'].to_i, 10].max
HEIGHT = [ENV['HEIGHT'].to_i, 6].max

stars = %w[ğŸ”† âœ¨ â­ï¸ ğŸŒŸ Ù­ â‹† â˜… â˜† âœ¦ âœ§ âœ© âœ« âœ¬ âœ­ âœ® âœ¯ âœµ âœ¶ âœ· âœ¸ âœ¹ â­‘ â­’ âœ´ï¸ â­ï¸]
space =
  Array.new(HEIGHT) do
    Array.new(WIDTH) { rand < 0.3 ? stars.sample : "\u3000" }
  end
space[rand(HEIGHT)][rand(WIDTH)] = %w[ğŸ‘¾ ğŸª â˜„ï¸ ğŸ›¸ ğŸ›°ï¸ ğŸš€ ğŸŒ ğŸŒ ğŸŒ ğŸŒ“ ğŸŒ• ğŸŒ’ ğŸŒ– ğŸŒ— ğŸŒ”].sample
puts(space.map!(&:join))
