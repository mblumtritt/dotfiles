#! /bin/sh

set -e

[ "$1" = '--help' ] && echo "Usage: ${0##*/} [--no-system]

Update System, Homebrew, Homebrew bundles, ASDF and Ruby gems.
(May require password.)" && exit

if ! [ "$1" = '-s' ] && ! [ "$1" = '--no-system' ]
then echo 'ðŸ†™ update system stuff' && update-system
fi
echo 'ðŸ†™ update Brew stuff' && update-brew
echo 'ðŸ†™ update ASDF stuff' && update-asdf
echo 'ðŸ†™ update Ruby stuff' && update-ruby
