#! /bin/sh -e

case "$1" in
(-h|--help) echo "Usage: ${0##*/} [--system]

Update Homebrew, Homebrew bundles, ASDF and Ruby gems.
The option --system allows to check for system updates too.
(May require password.)"
  exit
;;
(--system) SYSTEM=1 ;;
('') SYSTEM=0 ;;
(*) echo "${0##*/}: invalid argument - $1" >&2 ; exit 1 ;;
esac

[ "$SYSTEM" = "1" ] && (echo 'ğŸ†™ update system stuff' ; update-system)
echo 'ğŸ†™ update Brew stuff' ; update-brew
echo 'ğŸ†™ update ASDF stuff' ; update-asdf
echo 'ğŸ†™ update Ruby stuff' ; update-ruby
