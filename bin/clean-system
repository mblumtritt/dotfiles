#! /bin/sh -e

case "$1" in
(-h|--help) echo "Usage: ${0##*/}

Clean system. (May require password.)" ;;
('')
	echo 'â—ï¸ clean all stuff'

	cleanup() {
		trap - INT TERM EXIT
	}
	trap cleanup INT TERM EXIT

	while true; do
		sudo -n true
		sleep 60
		kill -0 "$$" || exit
	done 2>/dev/null &

	(command -v brew >/dev/null 2>&1) && (
		echo 'ðŸ—‘ï¸ clean brew stuff...'
		clean-brew
	)
	(command -v docker >/dev/null 2>&1) && (
		echo 'ðŸ—‘ï¸ clean Docker...'
		clean-docker
	)
	(command -v npm >/dev/null 2>&1) && (
		echo 'ðŸ—‘ï¸ clean NPM...'
		clean-npm
	)
	(command -v yarn >/dev/null 2>&1) && (
		echo 'ðŸ—‘ï¸ clean Yarn...'
		clean-yarn
	)
	(command -v gem >/dev/null 2>&1) && (
		echo 'ðŸ—‘ï¸ clean gems...'
		clean-gems
	)

	echo 'ðŸ—‘ï¸ remove system log files...' ; clean-logs
	echo 'ðŸ—‘ï¸ clean all library caches...' ; clean-caches
	echo 'ðŸ—‘ï¸ cleanup XCode derived data and archives...' ; clean-xcode
	echo 'ðŸ—‘ï¸ clean Trashes...' ; clean-trashes
;;
(*) >&2 echo "${0##*/}: invalid argument - $1" ; exit 1 ;;
esac
