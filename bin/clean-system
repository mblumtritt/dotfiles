#! /bin/sh

set -e

[ "$1" = '--help' ] && echo "Usage: ${0##*/}

Clean system. (May require password.)" && exit

echo 'â—ï¸ clean all stuff'

cleanup() {
  trap - INT TERM EXIT
}
trap cleanup INT TERM EXIT

while true; do
	sudo -n true
	sleep 60
	kill -0 "$$" || exit
done 2>/dev/null &

(command -v brew >/dev/null 2>&1) && echo 'ğŸ—‘ï¸ clean brew stuff...' && clean-brew
(command -v docker >/dev/null 2>&1) && echo 'ğŸ—‘ï¸ clean Docker...' && clean-docker
(command -v npm >/dev/null 2>&1) && echo 'ğŸ—‘ï¸ clean NPM...' && clean-npm
(command -v yarn >/dev/null 2>&1) && echo 'ğŸ—‘ï¸ clean Yarn...' && clean-yarn
(command -v gem >/dev/null 2>&1) && echo 'ğŸ—‘ï¸ clean gems...' && clean-gems

echo 'ğŸ—‘ï¸ remove system log files...' && clean-logs
echo 'ğŸ—‘ï¸ clean all library caches...' && clean-caches
echo 'ğŸ—‘ï¸ cleanup XCode derived data and archives...' && clean-xcode
echo 'ğŸ—‘ï¸ clean Trashes...' && clean-trashes
