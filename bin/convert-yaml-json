#! /bin/sh
USAGE="Usage: ${0##*/}

Convert YAML from stdin into JSON to stdout."

set -e
case "$1" in
('') ruby \
  --disable-all \
  -rpsych \
  -roj \
  -e'Oj.to_stream STDOUT,Psych.load_stream(STDIN)'
;;
(-h|--help) echo "$USAGE" ;;
(*) echo "${0##*/}: invalid argument - $1" >&2 && exit 1 ;;
esac
