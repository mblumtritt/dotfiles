#! /bin/sh -e

case "$1" in
(-h|--help) echo "Usage: ${0##*/} COMMAND

Execute given command for each installed ruby version." ;;
('') >&2 echo "${0##*/}: COMMAND missing" ; exit 1 ;;
(*)
	for ruby in $(asdf list ruby | grep -oE '[0-9]+\.[0-9]+\.[0-9]+')
	do
		echo "â€¢ Ruby $ruby"
		ASDF_RUBY_VERSION="$ruby" asdf exec "$@"
	done
;;
esac
