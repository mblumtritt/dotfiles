#! /bin/sh

set -e
readonly TDIR="~/Downloads"

if [ "$1" = '--help' ]; then echo "Usage: ${0##*/} URL

Download a audio or playlist as MP3 from given URL to '$TDIR'.
"
  exit 0
elif [ $# = 0 ]; then
	(>&2 echo "${0##*/}: URL missing")
	exit 1
else
  youtube-dl --extract-audio --ignore-errors --audio-quality 0 --audio-format mp3 --embed-thumbnail --add-metadata --geo-bypass --output "$TDIR/%(playlist_title)s/%(playlist_index)s-%(title)s.%(ext)s" "$*"
fi

