#! /bin/sh

set -e
readonly TDIR="~/Downloads"

if [ "$1" = '--help' ]; then echo "Usage: ${0##*/} URL

Download a audio or playlist as MP3 from given URL to '$TDIR'.
"
  exit 0
elif [ $# = 0 ]; then
	(>&2 echo "${0##*/}: URL missing")
	exit 1
else
  yt-dlp --extract-audio --audio-format mp3 --audio-quality 0 --embed-thumbnail --add-metadata --concurrent-fragments 4 --geo-bypass --output "$TDIR/%(playlist_title)s/%(playlist_index)s-%(title)s.%(ext)s" "$@"
fi
