#! /bin/sh

set -e

if [ "$1" = '--help' ]; then echo "Usage: ${0##*/} [NAME]

Create a 500 MB RAM disk.
"
else
    readonly SIZE=1024000
    DISK=$(hdiutil attach -nomount ram://$SIZE)
    diskutil eraseVolume HFS+ "${1:-RAMDisk}" "$DISK"
    echo "Use 'diskutil eject $DISK' to eject the disk."
fi
