#!/usr/bin/env ruby --disable-all
# frozen_string_literal: true

trap(2) { exit(138) }

WIDTH = [ENV['WIDTH'].to_i, 10].max
HEIGHT = [ENV['HEIGHT'].to_i, 6].max

def weighted(**definitions)
  sum = 0
  elements = definitions.keys
  weights = definitions.values.map! { sum += it }
  Enumerator.new do |y|
    while true
      rnd = rand(sum) + 1
      y << elements[weights.bsearch_index { rnd <= it }].sample
    end
  end
end

obj =
  weighted(
    %w[ðŸŒ² ðŸŒ³] => 100,
    %w[ðŸŒ¿ ðŸŒ±] => 80,
    ["\u3000"] => 70,
    %w[ðŸ¦‰ ðŸ… ðŸ† ðŸ¦ ðŸ¦§ ðŸ¦£ ðŸ¦Œ ðŸ• ðŸ¦ ðŸ¦¡ ðŸ¦¥ ðŸ¿ï¸] => 10,
    %w[ðŸ¦‡ ðŸ ðŸ¦‹ ðŸ› ðŸŒ ðŸž ðŸœ ðŸª² ðŸ¦Ÿ ðŸ¦— ðŸ•·ï¸ ðŸ ðŸ€ ðŸ¦” ðŸ„] => 5,
    %w[ðŸ¡ ðŸ  ðŸšï¸ ðŸ›–] => 2
  )
puts(Array.new(HEIGHT) { obj.take(WIDTH).join })
