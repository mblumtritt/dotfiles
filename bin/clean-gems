#! /bin/sh
USAGE="Usage: ${0##*/} [-a|--all]

Clean up Ruby gems. Option '--all' removes all installed gems."

set -e
with_rbenv() {
  for ruby in $(rbenv versions --bare); do
    echo ":: Ruby $ruby"
    RBENV_VERSION="$ruby" rbenv exec $@
  done
}
with_asdf() {
	for ruby in $(asdf list ruby); do
    ruby="${ruby#\*}"
    echo "â€¢ Ruby $ruby"
    ASDF_RUBY_VERSION="$ruby" asdf exec $@
	done
}
case "$1" in
('')
  type 'rbenv' >/dev/null 2>&1 && with_rbenv gem cleanup
  type 'asdf' >/dev/null 2>&1 && with_asdf gem cleanup
;;
(-a|--all)
  type 'rbenv' >/dev/null 2>&1 && with_rbenv gem uninstall -aIx
  type 'asdf' >/dev/null 2>&1 && with_asdf gem uninstall -aIx
;;
(-h|--help) echo "$USAGE" ;;
(*) echo "${0##*/}: invalid argument - $1" >&2 && exit 1 ;;
esac
