#! /bin/sh -e

case "$1" in
(-h|--help) echo "Usage: ${0##*/} [FILE | NAME]

Edit given FILE or project NAME." ;;
('') >&2 echo "${0##*/}: FILE or NAME missing " ; exit 1 ;;
(*)
  if [ -r "$1" ]
  then PROJECT="$1"
  else PROJECT="$(list-projects "$1")" || PROJECT="$1"
  fi
  exec "$IDE" "$PROJECT"
;;
esac
