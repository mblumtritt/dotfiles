#! /bin/sh

set -e

[ "$1" = '--help' ]  && echo "Usage: ${0##*/} NAME

Checks if disk NAME is the correct one." && exit

[ $# = 0 ] && (>&2 echo "${0##*/}: NAME missing") && exit 1

# check partition UUID against regsitered id (stored in pass)
if [ "$(print-disk-uuid "$1")" = "$(print-system-secret "$1")" ]
then
   # test if really mounted
   if [ -f "/Volumes/$1/.fseventsd/fseventsd-uuid" ]
   then exit 0
   fi
fi
exit 1
