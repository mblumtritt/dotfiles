#! /bin/sh

case "$1" in
(-h|--help) echo "Usage: ${0##*/}

Convert TEXT from stdin into URI (WWW form component) to stdout." ;;
('')
  set -e
  exec ruby \
  --disable-all \
  -ruri \
  -e'puts URI.encode_www_form_component STDIN.readlines(chomp:true).join'
;;
(*) echo "${0##*/}: invalid argument - $1" >&2 ; exit 1 ;;
esac
