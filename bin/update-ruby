#! /bin/sh
USAGE="Usage: ${0##*/}

Update Ruby gems."

set -e
case "$1" in
('')
  gem update --system --no-document
  gem install --no-document bundler rake syntax_tree pry rubocop tcp-client host-os natty-ui
  gem update --no-document
;;
(-h|--help) echo "$USAGE" ;;
(*) echo "${0##*/}: invalid argument - $1" >&2 ; exit 1 ;;
esac
