#! /bin/sh
USAGE="Usage: ${0##*/} [on|off]

Enable/disable background process throddeling (May require password.)"

set -e
case "$1" in
(on|1) sudo sysctl debug.lowpri_throttle_enabled=0 ;;
(off|0) sudo sysctl debug.lowpri_throttle_enabled=1 ;;
(-h|--help) echo "$USAGE" ;;
('') echo "${0##*/}: argument missing" >&2 && exit 1 ;;
(*) echo "${0##*/}: invalid argument - $1" >&2 && exit 1 ;;
esac
