#! /bin/sh

set -e

case "$1" in
(--help|-h|help)
  echo "Usage: ${0##*/} [on|off|status]

Enable/disable infrared receiver or show status (default)."
  ;;
(on|1)
  defaults write /Library/Preferences/com.apple.driver.AppleIRController DeviceEnabled -int 1
  ;;
(off|0)
  defaults write /Library/Preferences/com.apple.driver.AppleIRController DeviceEnabled -int 0
  ;;
(status|'')
  echo "State = $(defaults read /Library/Preferences/com.apple.driver.AppleIRController DeviceEnabled)"
  ;;
(*)
  (>&2 echo "${0##*/}: unknown option - $1") && exit 1
  ;;
esac
