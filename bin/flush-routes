#! /bin/sh

case "$1" in
(-h|--help) echo "Usage: ${0##*/} INTERFACE

Flush routes for your INTERFACE (like en0, en1, ...). (May require password.)" ;;
('') echo "${0##*/}: INTERFACE name missing" >&2 ; exit 1 ;;
(*)
  set -e
  sudo ifconfig "$1" down && sudo route flush && sudo ifconfig "$1" up
;;
esac
