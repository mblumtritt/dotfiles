#! /bin/sh

set -e

[ "$1" = '--help' ] && echo "Usage: ${0##*/} INTERFACE

Flush routes for your INTERFACE (like en0, en1, ...). (May require password.)" && exit

[ $# = 0 ] && (>&2 echo "${0##*/}: name of INTERFACE missing") && exit 1

sudo ifconfig "$1" down && sudo route flush && sudo ifconfig "$1" up
