#!/usr/bin/env ruby
# frozen_string_literal: true

if ARGV.include?('--help') || ARGV.include?('-h')
  puts <<~HELP
    usage: #{File.basename(Process.argv0)} <style>

    Convert TEXT from stdin to styled TEXT to stdout.

    Valid styles:
    #{styles.join(', ')}
  HELP
  exit
end

begin
  map = find(ARGV.first || 'cursive')
  if map.nil?
    $stderr.puts("invalid style - #{ARGV.first}")
    exit(1)
  end
  STDIN.each_char { |c| STDOUT << map[c] }
rescue Interrupt
  exit(128)
end

BEGIN {
  STDOUT.sync = true

  def styles
    SIMPLE.keys + MAPPED.keys
  end

  def find(name)
    ret = SIMPLE[name] and ret = Hash[ret.chars.each_slice(2).to_a]
    ret ||= MAPPED[name]
    ret&.default_proc = ->(_, k) { k }
    ret
  end

  SIMPLE = {
