#! /bin/sh

set -e

if [ "$1" = '--help' ]; then echo "usage: ${0##*/} NAME

Checks if disk NAME is the correct one.
"
else
   # check partition UUID agains regsitered id (stored in pass)
   if [ "$(disk-uuid "$1")" = "$(pass "$1")" ]; then
      # test if really mounted
      if [ -f "/Volumes/$1/.fseventsd/fseventsd-uuid" ]; then
         exit 0
      fi
   fi
   exit 1
fi
