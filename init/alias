#! /bin/sh

alias ll='lsd -Al'
alias lr='lsd -Rl'
alias du='du -kh'
alias top='btm --basic'

alias ...='cd ..'
alias tree='tree -AC'

alias fucking='sudo'
alias please='sudo'

alias o='open'
alias g='git'
alias e='edit-text'
alias sc='shellcheck'

alias rk='noglob rake'
alias gr='rk --rakelib ~/.rake'

alias be='bundle exec'
alias ber='noglob be rake'
alias bert='ber -T'
alias berd='ber -D'
alias berta='bert -A'
alias bdep='bundle list --paths | ruby --disable-all -n -e"puts(File.basename(\$_))"'

alias fspec='be rspec --order defined --fail-fast --format d'
alias rcop='rubocop -D -E -S'
alias pretty!='rbprettier --ignore-path=".gitignore" --single-quote --ruby-single-quote --ruby-to-proc --no-error-on-unmatched-pattern --write "**/*.{ru,rb,yml,yaml,md,rake}"'

alias dc='docker compose'
alias dcp='dc pull'
alias dcu='dc up -d'
alias dcd='dc down --remove-orphans'
